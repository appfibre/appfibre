{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			 "name": "Debug Desktop",
			//"runtimeExecutable": "${workspaceRoot}/packages/desktop/node_modules/.bin/electron",
			"program": "${workspaceRoot}/packages/desktop/app/dist/main.js",
			
			"runtimeArgs": [
				"packages\\desktop",
				// this args for attaching render process
				"--remote-debugging-port=9222"
			],
			"windows": {
				"runtimeExecutable": "${workspaceRoot}/packages/desktop/node_modules/.bin/electron.cmd"
			},
			"protocol": "inspector"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/packages/**/test/*.ts",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector"
		}
	]
}